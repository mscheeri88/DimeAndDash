      <!-- this div contains the check -->
      <div class="column bill">
        <h3>the check</h3>

        <!-- unordered list for the bill items -->
        <!-- "id=list0" indicates that this list is the original check -->
        <!-- the billID is stored as an attribute -->
        <ul class="main-item" data-bill-id={{billID}} id="list0">
          {{#each billItems}}
              <li id="li{{bill_item_id}}">
                <span>

                  <p class="check-item">{{description}}</p><p class="price">{{currency price}}</p>
                    <select class="select select-customer customer-dropdown" name="customers" id="dd{{bill_item_id}}">
